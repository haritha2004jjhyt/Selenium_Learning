package com.navigation;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class BrowserNavigationDemo {

	public static void main(String[] args) {

        // Optional: Set path to chromedriver if not in system PATH
        // System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");

        WebDriver driver = new ChromeDriver();

        // Step 1: Navigate to OrangeHRM
        driver.navigate().to("https://opensource-demo.orangehrmlive.com/");
        System.out.println("Title: " + driver.getTitle());
        System.out.println("Current URL: " + driver.getCurrentUrl());

        // Step 2: Navigate to OpenCart
        driver.navigate().to("https://demo.opencart.com/");
        System.out.println("Title: " + driver.getTitle());
        System.out.println("Current URL: " + driver.getCurrentUrl());

        // Step 3: Navigate to Bing
        driver.navigate().to("http://www.bing.com");
        System.out.println("Title: " + driver.getTitle());
        System.out.println("Current URL: " + driver.getCurrentUrl());

        // Step 4: Navigate to FreeCRM
        driver.navigate().to("https://www.freecrm.com/");
        System.out.println("Title: " + driver.getTitle());
        System.out.println("Current URL: " + driver.getCurrentUrl());

        // Step 5: Navigate to Half.com
        driver.navigate().to("http://www.half.ebay.com");
        System.out.println("Title: " + driver.getTitle());
        System.out.println("Current URL: " + driver.getCurrentUrl());

        // Step 6: Go back
        driver.navigate().back();
        System.out.println("After back: " + driver.getCurrentUrl());

        // Step 7: Go forward
        driver.navigate().forward();
        System.out.println("After forward: " + driver.getCurrentUrl());

        // Step 8: Refresh the page
        driver.navigate().refresh();
        System.out.println("Page refreshed.");

        // Step 9: Get page source length
        String pageSource = driver.getPageSource();
        System.out.println("Page Source Length: " + pageSource.length());

        // Step 10: Close browser
        driver.quit();
    }

}
